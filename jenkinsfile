pipeline {
    agent { docker { image 'python:3.5.1' } }
    stages {
        stage('build') {
            steps {
                sh 'python --version'
                sh 'pip install --upgrade pip'
                sh 'pip install mysql-connector-python'
            }
        }
        stage('connect to DB') {
            steps {
                echo 'test'
            }
        }
    }
}

